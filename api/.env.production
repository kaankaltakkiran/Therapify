# API Settings
APP_ENV=production
APP_DEBUG=false
APP_URL=https://therapify-api.kaankaltakkiran.com

# JWT Settings
JWT_SECRET_KEY=your-256-bit-secret
JWT_EXPIRE_TIME=3600

# Upload Settings
UPLOAD_BASE_PATH=/var/www/my_webapp__2/www/uploads
UPLOAD_BASE_URL=https://therapify-api.kaankaltakkiran.com/uploads
MAX_UPLOAD_SIZE=5242880 # 5MB in bytes
UPLOAD_DIRECTORY=uploads

# CORS Settings
ALLOWED_ORIGINS=https://therapify.kaankaltakkiran.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Origin,Accept
ALLOWED_CREDENTIALS=true
MAX_AGE=86400 